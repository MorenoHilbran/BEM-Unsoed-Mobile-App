<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white">

    <!-- Header -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="2dp"
        app:cardCornerRadius="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingHorizontal="16dp"
            android:background="@android:color/white">

            <ImageView
                android:id="@+id/btn_close"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_close"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:focusable="true"
                android:padding="4dp"
                android:contentDescription="@string/close"
                app:tint="#1C1C1E" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/create_post"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#1C1C1E"
                android:gravity="center"
                android:layout_marginHorizontal="16dp" />

            <Button
                android:id="@+id/btn_post"
                android:layout_width="wrap_content"
                android:layout_height="38dp"
                android:background="@drawable/post_button_bg"
                android:enabled="false"
                android:paddingHorizontal="16dp"
                android:text="@string/post"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:textStyle="bold" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <!-- Post Creation Content -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:padding="16dp">

        <!-- User Avatar -->
        <androidx.cardview.widget.CardView
            android:layout_width="48dp"
            android:layout_height="48dp"
            app:cardCornerRadius="24dp"
            app:cardElevation="0dp">

            <ImageView
                android:id="@+id/iv_user_avatar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/profil"
                android:contentDescription="@string/profile_photo_desc" />

        </androidx.cardview.widget.CardView>

        <!-- Post Input Area -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginStart="12dp"
            android:orientation="vertical">

            <!-- Text Input -->
            <EditText
                android:id="@+id/et_post_content"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:hint="@string/whats_happening"
                android:textSize="18sp"
                android:textColor="#1C1C1E"
                android:textColorHint="#8E8E93"
                android:gravity="top"
                android:padding="0dp"
                android:maxLength="280"
                android:inputType="textMultiLine|textCapSentences"
                android:scrollbars="vertical"
                android:overScrollMode="always"
                tools:text="Apa yang sedang kamu pikirkan?" />

            <!-- Character Counter -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="end"
                android:layout_marginTop="8dp">

                <TextView
                    android:id="@+id/tv_character_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="280"
                    android:textSize="14sp"
                    android:textColor="#8E8E93"
                    tools:text="280" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
