<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="0dp"
    android:layout_marginVertical="1dp"
    app:cardCornerRadius="0dp"
    app:cardElevation="0dp"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:background="@android:color/white">

        <!-- User Avatar -->
        <androidx.cardview.widget.CardView
            android:layout_width="48dp"
            android:layout_height="48dp"
            app:cardCornerRadius="24dp"
            app:cardElevation="0dp">

            <ImageView
                android:id="@+id/iv_user_avatar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/profil"
                android:contentDescription="@string/profile_photo_desc" />

        </androidx.cardview.widget.CardView>

        <!-- Post Content -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="12dp"
            android:orientation="vertical">

            <!-- User Info Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/tv_user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="John Doe"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:textColor="#1C1C1E"
                    tools:text="John Doe" />

                <TextView
                    android:id="@+id/tv_username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@johndoe"
                    android:textSize="15sp"
                    android:textColor="#8E8E93"
                    android:layout_marginStart="8dp"
                    tools:text="@johndoe" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" â€¢ "
                    android:textColor="#8E8E93"
                    android:layout_marginHorizontal="4dp" />

                <TextView
                    android:id="@+id/tv_post_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2j"
                    android:textSize="15sp"
                    android:textColor="#8E8E93"
                    tools:text="2j" />

            </LinearLayout>

            <!-- Post Content Text -->
            <TextView
                android:id="@+id/tv_post_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Ini adalah contoh post di forum BEM Unsoed. Kita bisa diskusi berbagai topik menarik di sini!"
                android:textSize="15sp"
                android:textColor="#1C1C1E"
                android:lineSpacingExtra="2dp"
                tools:text="Ini adalah contoh post di forum BEM Unsoed. Kita bisa diskusi berbagai topik menarik di sini!" />

            <!-- Action Buttons Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="12dp"
                android:gravity="start">

                <!-- Comment Button -->
                <LinearLayout
                    android:id="@+id/btn_comment"
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:clickable="true"
                    android:focusable="true"
                    android:paddingHorizontal="8dp">

                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:src="@drawable/ic_comment_outline"
                        android:contentDescription="@string/feed_comment"
                        app:tint="#8E8E93" />

                    <TextView
                        android:id="@+id/tv_comment_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="12"
                        android:textSize="13sp"
                        android:textColor="#8E8E93"
                        android:layout_marginStart="6dp"
                        tools:text="12" />

                </LinearLayout>

                <!-- Like Button -->
                <LinearLayout
                    android:id="@+id/btn_like"
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:clickable="true"
                    android:focusable="true"
                    android:paddingHorizontal="8dp"
                    android:layout_marginStart="24dp">

                    <ImageView
                        android:id="@+id/iv_like_icon"
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:src="@drawable/ic_heart_outline"
                        android:contentDescription="@string/feed_like"
                        app:tint="#8E8E93" />

                    <TextView
                        android:id="@+id/tv_like_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="24"
                        android:textSize="13sp"
                        android:textColor="#8E8E93"
                        android:layout_marginStart="6dp"
                        tools:text="24" />

                </LinearLayout>

                <!-- Spacer -->
                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1" />

                <!-- More Options Button -->
                <ImageView
                    android:id="@+id/btn_more_options"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_more_vert"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:clickable="true"
                    android:focusable="true"
                    android:padding="8dp"
                    android:contentDescription="More options"
                    app:tint="#8E8E93" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <!-- Divider -->
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#E5E5EA"
        android:layout_gravity="bottom" />

</androidx.cardview.widget.CardView>
