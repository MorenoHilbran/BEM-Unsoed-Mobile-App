<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:background="@android:color/white"
    android:elevation="8dp"
    android:paddingTop="8dp"
    android:paddingBottom="16dp">

    <!-- Home Button (Left) -->
    <LinearLayout
        android:id="@+id/nav_home"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/forum_button_container"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <ImageView
            android:id="@+id/nav_home_icon"
            android:layout_width="30dp"
            android:layout_height="29dp"
            android:layout_marginBottom="4dp"
            android:contentDescription="Beranda"
            android:src="@drawable/ic_beranda" />

        <TextView
            android:id="@+id/nav_home_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Beranda"
            android:textSize="11sp"
            android:textColor="@color/grey" />

    </LinearLayout>

    <!-- Forum Button Container (Center - Special) -->
    <FrameLayout
        android:id="@+id/forum_button_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <!-- Forum Button (Special Circular Design) -->
        <ImageView
            android:id="@+id/nav_forum"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:background="@drawable/bg_forum"
            android:clickable="true"
            android:contentDescription="jendz"
            android:focusable="true"
            android:padding="16dp"
            android:src="@drawable/ic_forum" />

    </FrameLayout>

    <!-- Profile Button (Right) -->
    <LinearLayout
        android:id="@+id/nav_profile"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintStart_toEndOf="@id/forum_button_container"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <ImageView
            android:id="@+id/nav_profile_icon"
            android:layout_width="29dp"
            android:layout_height="27dp"
            android:layout_marginBottom="4dp"
            android:contentDescription="Profile"
            android:src="@drawable/ic_profile" />

        <TextView
            android:id="@+id/nav_profile_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Profil"
            android:textSize="11sp"
            android:textColor="@color/grey" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
