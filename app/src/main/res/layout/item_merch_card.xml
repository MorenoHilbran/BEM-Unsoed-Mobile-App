<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="160dp"
    android:layout_height="200dp"
    android:layout_margin="6dp"
    app:cardCornerRadius="10dp"
    app:cardElevation="3dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- Merch Image -->
        <ImageView
            android:id="@+id/iv_merch_image"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:scaleType="centerCrop"
            android:src="@drawable/test1"
            android:contentDescription="@string/merch_image_desc" />

        <!-- Merch Info -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="12dp">

            <!-- Merch Title -->
            <TextView
                android:id="@+id/tv_merch_title"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="Gensoed Merchandise Terbaru!"
                android:textSize="13sp"
                android:textStyle="bold"
                android:textColor="#1C1C1E"
                android:maxLines="2"
                android:ellipsize="end"
                android:gravity="top"
                tools:text="Gensoed Merchandise Terbaru!" />

            <!-- Merch Price -->
            <TextView
                android:id="@+id/tv_merch_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Rp 75.000"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="@color/primary_color"
                android:layout_marginTop="4dp"
                tools:text="Rp 75.000" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
