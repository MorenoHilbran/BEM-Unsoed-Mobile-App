<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.bemunsoed.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_dashboard"
        android:name="com.example.bemunsoed.ui.dashboard.DashboardFragment"
        android:label="@string/title_dashboard"
        tools:layout="@layout/fragment_dashboard">

        <!-- Action yang sudah ada (ke detail) -->
        <action
            android:id="@+id/action_navigation_dashboard_to_postDetailFragment"
            app:destination="@id/postDetailFragment" />

        <!-- ========================================================= -->
        <!-- DAN TAMBAHKAN ACTION INI DI DALAM DASHBOARD -->
        <!-- ID ini harus sama persis dengan yang dipanggil di Kotlin -->
        <action
            android:id="@+id/action_navigation_dashboard_to_createPostFragment"
            app:destination="@id/createPostFragment" />
        <!-- ========================================================= -->

    </fragment>

    <fragment
        android:id="@+id/navigation_notifications"
        android:name="com.example.bemunsoed.ui.notifications.NotificationsFragment"
        android:label="@string/title_notifications"
        tools:layout="@layout/fragment_notifications">

        <action
            android:id="@+id/action_navigation_notifications_to_postDetail"
            app:destination="@id/postDetailFragment" />
    </fragment>

    <fragment
        android:id="@+id/postDetailFragment"
        android:name="com.example.bemunsoed.ui.dashboard.PostDetailFragment"
        android:label="Post Detail"
        tools:layout="@layout/fragment_post_detail">

        <argument
            android:name="postId"
            app:argType="string" />
    </fragment>

    <fragment
        android:id="@+id/notificationListFragment"
        android:name="com.example.bemunsoed.ui.notifications.NotificationListFragment"
        android:label="Notifikasi"
        tools:layout="@layout/fragment_notification_list">

        <action
            android:id="@+id/action_notification_to_postDetail"
            app:destination="@id/postDetailFragment" />
    </fragment>

    <!-- Fragment post detail duplikat, bisa dihapus jika tidak dipakai -->
    <fragment
        android:id="@+id/navigation_post_detail"
        android:name="com.example.bemunsoed.ui.dashboard.PostDetailFragment"
        android:label="Post Detail"
        tools:layout="@layout/fragment_post_detail">

        <argument
            android:name="postId"
            app:argType="string" />
    </fragment>

    <fragment
        android:id="@+id/createPostFragment"
        android:name="com.example.bemunsoed.ui.createpost.CreatePostFragment"
        android:label="CreatePostFragment"
        tools:layout="@layout/fragment_create_post" />
    <fragment
        android:id="@+id/webViewFragment"
        android:name="com.example.bemunsoed.ui.webview.WebViewFragment"
        android:label="WebView"
        tools:layout="@layout/fragment_webview">
        <argument
            android:name="url"
            app:argType="string" />
        <argument
            android:name="title"
            app:argType="string" />
    </fragment>


</navigation>